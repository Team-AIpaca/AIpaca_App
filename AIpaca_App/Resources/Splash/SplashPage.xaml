<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AIpaca_App.Resources.Splash.SplashPage"
             Title="SplashPage"
             BackgroundColor="#a0e2ff">
    
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="logo_aipaca.png" WidthRequest="200" HeightRequest="200"/>
        <!-- 로딩 인디케이터 추가 -->
        <ActivityIndicator IsRunning="True" Color="Black"/>
        <Label x:Name="statusLabel" Text="앱 초기화 중..." FontSize="Medium" HorizontalTextAlignment="Center"/>
    </VerticalStackLayout>
</ContentPage>