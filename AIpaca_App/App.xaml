<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AIpaca_App"
             xmlns:conv="clr-namespace:AIpaca_App.Views.Converters"
             x:Class="AIpaca_App.App">
    <Application.Resources>
        <ResourceDictionary>
            <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <conv:SuccessToColorConverter x:Key="SuccessToColorConverter"/>
            <Color x:Key="DefaultPageBackgroundColor">White</Color>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
    
