<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:AIpaca_App.Resources.Localization"
             x:Class="AIpaca_App.Views.MainPage"
             BackgroundColor="{DynamicResource DefaultPageBackgroundColor}">

    <Grid RowDefinitions="*,*">
        <!-- 상단 텍스트 입력 필드 영역 -->
        <ScrollView Grid.Row="0" Padding="10">
            <Frame CornerRadius="20" Padding="0" Margin="20">
                <VerticalStackLayout Spacing="10" Padding="10">
                    <!-- 입력 필드 -->
                    <Entry x:Name="SourceTextEntry"
                           Placeholder="번역할 내용을 입력하세요"
                           VerticalOptions="Start" />
                    <!-- 번역하기 버튼 -->
                    <Button Text="번역하기"
                            HorizontalOptions="FillAndExpand"
                            Clicked="OnTranslateButtonClicked" />
                </VerticalStackLayout>
            </Frame>
        </ScrollView>

        <!-- 하단 번역된 텍스트 영역 -->
        <ScrollView Grid.Row="1" Padding="10">
            <Frame Grid.Row="1" CornerRadius="20" Padding="10" Margin="20" BorderColor="Gray">
                <Editor x:Name="TranslatedTextEditor"
            IsReadOnly="True"
            VerticalOptions="FillAndExpand" />
            </Frame>
        </ScrollView>
    </Grid>
</ContentPage>
