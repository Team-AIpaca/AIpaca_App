<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:resources="clr-namespace:AIpaca_App.Resources.Localization"
             x:Class="AIpaca_App.Views.RobotPopup" 
             Color= "{x:Static Colors.Transparent}">

    <Border Padding="15" BackgroundColor="{AppThemeBinding Dark=#1c1c1c, Light=#ffffff}">

        <!--파파고-->
        <Frame CornerRadius="0" BorderColor="{AppThemeBinding Dark=Gray, Light=Gray}" HasShadow="True" Padding="10" BackgroundColor="{AppThemeBinding Dark=#2c2c2c, Light=#ffffff}">
            <VerticalStackLayout>
                <VerticalStackLayout.Behaviors>
                    <toolkit:TouchBehavior DefaultAnimationDuration="250" DefaultBackgroundColor="Transparent" 
                       PressedBackgroundColor="DarkGray" TouchGestureCompleted="OnCopyButtonClicked" />
                </VerticalStackLayout.Behaviors>
                <Label Text="복사하기" />
            </VerticalStackLayout>
        </Frame>
        
    </Border>
</toolkit:Popup>
